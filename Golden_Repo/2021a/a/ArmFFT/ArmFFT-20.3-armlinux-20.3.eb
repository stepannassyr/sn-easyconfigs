# This is a thin wrapper that depends on Modules already being installed and in the MODULEPATH
import os as local_os
easyblock = 'Bundle'
name = 'ArmFFT'
version = '20.3'

homepage = 'http://www.arm.com'
description = """
ARM performance libraries as FFT library
"""


toolchain = {'version': version, 'name': 'armlinux'}

altroot = 'armpl'

local_osprefix  = local_os.getenv("ARMOSPREFIX")
local_optprefix = local_os.getenv("ARMOPTPREFIX")

# No optimized build for A72 from ver. 20.0 
if "Cortex-A72" == local_optprefix:
  local_optprefix = "Generic-AArch64"

dependencies = [('%s/%s/arm-linux-compiler-%s/armpl/%s.0' % (local_optprefix,local_osprefix,version,version),     EXTERNAL_MODULE)]


moduleclass = 'numlib'
